include <../lists.scad>;

// --- Flatten ---------------------------------------------------------------
echo("flatten([[0,1],[2,3]]) =", flatten([[0, 1], [2, 3]]));
// expect [0,1,2,3]

// --- Range -----------------------------------------------------------------
echo("range([0:2:6]) =", range([0:2:6]));
// expect [0,2,4,6]

// --- Reverse ---------------------------------------------------------------
echo("reverse([1,2,3]) =", reverse([1, 2, 3]));
// expect [3,2,1]

// --- Subarray --------------------------------------------------------------
echo("subarray([1,2,3,4],1,3) =", subarray([1, 2, 3, 4], 1, 3));
// expect [2,3]

echo("subarray([1,2,3,4],0,-1) =", subarray([1, 2, 3, 4], 0, -1));
// expect [1,2,3,4]

// --- Set -------------------------------------------------------------------
echo("set([1,2,3,4],2,5) =", set([1, 2, 3, 4], 2, 5));
// expect [1,2,5,4]

// --- Remove ---------------------------------------------------------------
echo("remove([4,3,2,1],1) =", remove([4, 3, 2, 1], 1));
// expect [4,2,1]

echo("remove([10,20,30,40,50],0) =", remove([10, 20, 30, 40, 50], 0));
// expect [20,30,40,50]

echo("remove([10,20,30,40,50],4) =", remove([10, 20, 30, 40, 50], 4));
// expect [10,20,30,40]
